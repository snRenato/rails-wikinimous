<div style="text-align: center">
<h1><%= @article.title%></h1> <i class="fas fa-trash"></i> <hr>
<span>
  <%= @article.content %>
</span> <br>
  <%= link_to articles_path do %>
    <button type="button" class="btn btn-primary mt-2">Back</button>
  <%end%>

  <%= link_to edit_article_path do %>
    <button type="button" class="btn btn-warning mt-2">Edit</button>
  <%end%>

  <%= link_to article_path(@article), method: :delete, data: { confirm: 'Are you sure?' } do %>
    <button type="button"class="btn btn-danger mt-2">Delete</button>
  <%end%>
</div>
